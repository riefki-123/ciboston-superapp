---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import Timeline from '../components/about/Timeline.astro';
import Leadership from '../components/about/Leadership.astro';
import RegionalHeads from '../components/about/RegionalHeads.astro';
import CulturalHighlights from '../components/about/CulturalHighlights.astro';
import EconomicIndicators from '../components/about/EconomicIndicators.astro';

const title = "About Ciboston";
const description = "Learn about Ciboston Province - our history, culture, leadership, and economic development. Discover what makes our province unique.";
---

<Layout 
  title={title}
  description={description}
>
  <PageHeader 
    title="About Ciboston"
    subtitle="Our rich history, dynamic leadership, and vibrant culture"
    backgroundImage="https://images.pexels.com/photos/2952196/pexels-photo-2952196.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  />
  
  <div class="container mx-auto px-4 py-12">
    <!-- Provincial Overview -->
    <section class="my-12">
      <div class="bg-white rounded-xl shadow-md overflow-hidden">
        <div class="md:flex">
          <div class="md:w-1/2">
            <img 
              src="https://images.pexels.com/photos/3876407/pexels-photo-3876407.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
              alt="Ciboston Provincial Capitol" 
              class="h-full w-full object-cover"
            />
          </div>
          <div class="p-6 md:p-8 md:w-1/2">
            <h2 class="font-poppins text-3xl font-bold text-primary-700 mb-4">Provincial Overview</h2>
            <p class="text-gray-600 mb-6">
              Founded in 1892, Ciboston Province is located in the northeastern coastal region, spanning 15,000 square kilometers. Home to 7.5 million residents, our province is known for its diverse landscape featuring mountains in the north, fertile plains in the south, and a beautiful coastline along the east.
            </p>
            <p class="text-gray-600 mb-6">
              Ciboston City serves as our provincial capital and economic hub, while our five administrative regions each contribute to the province's economic and cultural diversity. We're proud of our rich heritage and forward-thinking approach to governance.
            </p>
            
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mt-8">
              <div class="text-center">
                <div class="text-3xl font-bold text-primary-600">7.5M</div>
                <div class="text-gray-500 text-sm">Population</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-primary-600">15,000</div>
                <div class="text-gray-500 text-sm">Square KM</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-primary-600">5</div>
                <div class="text-gray-500 text-sm">Regions</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-primary-600">1892</div>
                <div class="text-gray-500 text-sm">Founded</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Timeline Section -->
    <Timeline />
    
    <!-- Leadership Section -->
    <Leadership />
    
    <!-- Regional Heads Section -->
    <RegionalHeads />
    
    <!-- Cultural Highlights -->
    <CulturalHighlights />
    
    <!-- Economic Indicators -->
    <EconomicIndicators />
  </div>
</Layout>