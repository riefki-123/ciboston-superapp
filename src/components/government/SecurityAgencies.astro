---
const securityAgencies = [
  {
    id: "cose",
    name: "COSE",
    fullName: "Ciboston Office and Security Enforcement",
    description: "Bertanggung jawab atas operasi intelijen, kontra-terorisme, dan koordinasi keamanan tingkat tinggi di seluruh provinsi.",
    director: "Kolonel Meilima Idfa Ariandika",
    responsibilities: [
      "Operasi kontra-terorisme",
      "Penyelamatan Sandera",
      "Investigasi Istimewa",
      "Koordinator Keamanan Provinsi"
    ],
    image: "cose.png"
  },
  {
    id: "ccpd",
    name: "CCPD",
    fullName: "Ciboston City Police Department",
    description: "Lembaga penegak hukum utama yang melayani Kota Ciboston dengan program kepolisian berbasis masyarakat dan pencegahan kejahatan.",
    director: "Commissioner Diana Reynolds",
    responsibilities: [
      "Penegakan hukum di Urban",
      "Investigasi Kriminal",
      "Traffic Management",
      "Program kepolisian berbasis masyarakat"
    ],
    image: "ccpd.png"
  },
  {
    id: "chp",
    name: "CHP",
    fullName: "Ciboston Highway Police",
    description: "Menjaga keamanan di Jalan Raya provinsi dan jalan desa, melaksanakan penegakan lalu lintas dan tanggap kecelakaan.",
    director: "Chief Thomas Lee",
    responsibilities: [
      "Patroli Jalan Raya",
      "Traffic Enforcement",
      "Penyelidikan Kecelakaan",
      "Keamanan di daerah Pedesaan"
    ],
    image: "chp.jpg"
  },
  {
    id: "ccfd",
    name: "CCFD",
    fullName: "Ciboston City Fire Department",
    description: "Menyediakan layanan pemadaman kebakaran, penyelamatan, dan pendidikan pencegahan kebakaran di seluruh provinsi.",
    director: "Chief Sophia Martinez",
    responsibilities: [
      "Pemadaman kebakaran",
      "Penyelamatan darurat",
      "Tanggap darurat Hazard",
      "Pendidikan pencegahan kebakaran"
    ],
    image: "fdcc.jpeg"
  },
  {
    id: "wssk",
    name: "WSSK",
    fullName: "Worldwide Strategic Special Force Kommando",
    description: "Unit taktis elit yang menangani operasi berisiko tinggi, situasi sandera, dan misi keamanan khusus.",
    director: "Kolonel Meilima Idfa Ariandika",
    responsibilities: [
      "Operasi tanggap taktis",
      "Pengumpulan Informasi",
      "Pelaksanaan surat perintah penangkapan berisiko tinggi",
      "Proteksi Pemimpin Negara"
    ],
    image: "wssk.jpg"
  }
];
---

<section>
  <h2 class="font-poppins text-3xl font-bold text-primary-700 text-center mb-8">Lembaga Keamanan dan Keselamatan</h2>
  
  <div class="grid grid-cols-1 gap-8">
    {securityAgencies.map((agency, index) => (
      <div class={`bg-white rounded-xl shadow-md overflow-hidden ${index % 2 === 1 ? 'md:flex-row-reverse' : ''} md:flex`}>
        <div class="md:w-1/3 lg:w-1/4 relative">
          <img 
            src={agency.image} 
            alt={agency.fullName} 
            class="w-full h-60 md:h-full object-cover"
          />
          <div class="absolute top-0 left-0 bg-primary-700 text-white py-1 px-3 font-medium">
            {agency.name}
          </div>
        </div>
        
        <div class="p-6 md:w-2/3 lg:w-3/4">
          <h3 class="font-poppins text-2xl font-semibold text-primary-700 mb-1">{agency.fullName}</h3>
          <p class="text-gray-500 mb-4">{agency.director}</p>
          
          <p class="text-gray-700 mb-4">{agency.description}</p>
          
          <div>
            <h4 class="font-medium text-gray-900 mb-2">Key Responsibilities:</h4>
            <ul class="grid grid-cols-1 sm:grid-cols-2 gap-y-2 gap-x-4">
              {agency.responsibilities.map(responsibility => (
                <li class="flex items-start">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary-500 mr-2 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                  <span class="text-gray-600">{responsibility}</span>
                </li>
              ))}
            </ul>
          </div>
          
          <div class="mt-6">
            <a href={`/agencies/${agency.id}`} class="inline-flex items-center text-primary-600 hover:text-primary-700">
              Pelajari Lebih Lanjut {agency.name}
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>