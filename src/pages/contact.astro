---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import ContactForm from '../components/contact/ContactForm.astro';
import EmergencyDirectory from '../components/contact/EmergencyDirectory.astro';
import ServiceRequest from '../components/contact/ServiceRequest.astro';
import SocialMedia from '../components/contact/SocialMedia.astro';
import OfficeLocations from '../components/contact/OfficeLocations.astro';

const title = "Contact & Public Services";
const description = "Contact the Ciboston Provincial Government. Find emergency services, submit service requests, locate government offices, and connect with us on social media.";
---

<Layout 
  title={title}
  description={description}
>
  <PageHeader 
    title="Contact & Public Services"
    subtitle="How to reach us, request services, and find important resources"
    backgroundImage="https://images.pexels.com/photos/33999/pexels-photo.jpg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  />
  
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <!-- Contact Form -->
        <section class="mb-12">
          <h2 class="font-poppins text-3xl font-bold text-primary-700 mb-6">Get in Touch</h2>
          <ContactForm />
        </section>
        
        <!-- Service Request System -->
        <section class="mb-12">
          <h2 class="font-poppins text-3xl font-bold text-primary-700 mb-6">Request a Service</h2>
          <ServiceRequest />
        </section>
        
        <!-- Office Locations Map -->
        <section>
          <h2 class="font-poppins text-3xl font-bold text-primary-700 mb-6">Our Offices</h2>
          <OfficeLocations />
        </section>
      </div>
      
      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <!-- Emergency Numbers -->
        <section class="mb-8">
          <h2 class="font-poppins text-2xl font-bold text-primary-700 mb-4">Emergency Directory</h2>
          <div class="bg-white rounded-xl shadow-md overflow-hidden">
            <EmergencyDirectory />
          </div>
        </section>
        
        <!-- Social Media -->
        <section class="mb-8">
          <h2 class="font-poppins text-2xl font-bold text-primary-700 mb-4">Connect With Us</h2>
          <div class="bg-white rounded-xl shadow-md overflow-hidden">
            <SocialMedia />
          </div>
        </section>
        
        <!-- Quick Links -->
        <section>
          <h2 class="font-poppins text-2xl font-bold text-primary-700 mb-4">Quick Links</h2>
          <div class="bg-white rounded-xl shadow-md overflow-hidden p-6">
            <ul class="space-y-3">
              <li>
                <a href="/faqs" class="flex items-center text-primary-600 hover:text-primary-700">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Frequently Asked Questions
                </a>
              </li>
              <li>
                <a href="/feedback" class="flex items-center text-primary-600 hover:text-primary-700">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                  </svg>
                  Submit Feedback
                </a>
              </li>
              <li>
                <a href="/departments" class="flex items-center text-primary-600 hover:text-primary-700">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                  Department Directory
                </a>
              </li>
              <li>
                <a href="/events" class="flex items-center text-primary-600 hover:text-primary-700">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  Upcoming Events
                </a>
              </li>
              <li>
                <a href="/careers" class="flex items-center text-primary-600 hover:text-primary-700">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  Career Opportunities
                </a>
              </li>
            </ul>
          </div>
        </section>
      </div>
    </div>
  </div>
</Layout>