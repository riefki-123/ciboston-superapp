    image: "https://images.pexels.com/photos/3796217/pexels-photo-3796217.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    since: "2023"
  },
  {
    name: "Pj, Fauzan Ghani, S.Goon",
    region: "Manhattan",
    image: "https://images.pexels.com/photos/5668770/pexels-photo-5668770.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    since: "2023"
  },
  {
    name: "Kolonel Aziz F",
    region: "Ciboston City",
    image: "https://images.pexels.com/photos/3796227/pexels-photo-3796227.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    since: "2023"
  },
  {
    name: "Sensei Reza Gartiwa Faisal, S.Kom",
    region: "Cicopenhangen",
    image: "https://images.pexels.com/photos/6209350/pexels-photo-6209350.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    since: "2023"
  },
  {
    name: "Tegar Nasution, S.Ds.",
    region: "Munjul Downtown",
    image: "https://images.pexels.com/photos/6000065/pexels-photo-6000065.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    since: "2023"
  }
