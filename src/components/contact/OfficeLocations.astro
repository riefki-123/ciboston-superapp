---
const officeLocations = [
  {
    name: "Ciboston City Hall",
    address: "123 Government Avenue, Ciboston City, CP 10001",
    phone: "(555) 123-4567",
    hours: "Monday - Friday: 8:30 AM - 5:00 PM",
    coordinates: [40.7128, -74.0060],
    region: "Central Region"
  },
  {
    name: "Northern Region Administrative Center",
    address: "456 Highland Road, Northvale, CP 20001",
    phone: "(555) 234-5678",
    hours: "Monday - Friday: 9:00 AM - 4:30 PM",
    coordinates: [40.8128, -74.1060],
    region: "Northern Region"
  },
  {
    name: "Eastern Region Office",
    address: "789 Harbor View, Eastport, CP 30001",
    phone: "(555) 345-6789",
    hours: "Monday - Friday: 8:30 AM - 5:00 PM",
    coordinates: [40.7228, -73.9060],
    region: "Eastern Region"
  },
  {
    name: "Western Region Complex",
    address: "321 Industrial Parkway, Westfield, CP 40001",
    phone: "(555) 456-7890",
    hours: "Monday - Friday: 9:00 AM - 5:30 PM",
    coordinates: [40.7028, -74.1160],
    region: "Western Region"
  },
  {
    name: "Southern Region Center",
    address: "654 Farmland Drive, Southdale, CP 50001",
    phone: "(555) 567-8901",
    hours: "Monday - Friday: 8:00 AM - 4:00 PM",
    coordinates: [40.6128, -74.0160],
    region: "Southern Region"
  }
];
---

<div class="bg-white rounded-xl shadow-md overflow-hidden">
  <div class="relative h-96 bg-gray-300">
    <div class="absolute inset-0 flex items-center justify-center bg-primary-100">
      <!-- This would be an embedded map in a real implementation -->
      <div class="text-center p-6">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-primary-400 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
        </svg>
        <p class="text-gray-700">Interactive Map</p>
        <p class="text-sm text-gray-500">This would be an embedded interactive map in a production environment</p>
      </div>
    </div>
  </div>
  
  <div class="p-6">
    <div class="mb-6">
      <h3 class="font-poppins text-xl font-semibold text-primary-700 mb-4">Office Locations</h3>
      
      <div class="space-y-6">
        {officeLocations.map(office => (
          <div class="border-b border-gray-100 pb-5 last:border-b-0 last:pb-0">
            <h4 class="font-medium text-gray-800 mb-2">{office.name}</h4>
            <p class="text-gray-600 mb-3">
              <span class="block">{office.address}</span>
              <span class="text-sm text-gray-500">({office.region})</span>
            </p>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-2 text-sm">
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-primary-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                {office.phone}
              </div>
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-primary-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                {office.hours}
              </div>
            </div>
            
            <div class="mt-3">
              <a 
                href={`https://maps.google.com/?q=${office.coordinates[0]},${office.coordinates[1]}`} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center text-primary-600 hover:text-primary-700 text-sm"
              >
                Get Directions
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
    
    <div class="bg-primary-50 p-4 rounded-lg">
      <h4 class="font-medium text-primary-700 mb-2">Virtual Services</h4>
      <p class="text-sm text-gray-600 mb-3">
        Many of our services are available online. You can access them 24/7 without visiting an office.
      </p>
      <a 
        href="/services/online" 
        class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium"
      >
        Access Online Services
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </a>
    </div>
  </div>
</div>