---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/home/Hero.astro';
import RegionalMap from '../components/home/RegionalMap.astro';
import ServiceGrid from '../components/home/ServiceGrid.astro';
import NewsCarousel from '../components/home/NewsCarousel.astro';
import EmergencyStrip from '../components/home/EmergencyStrip.astro';
import FeaturedSection from '../components/home/FeaturedSection.astro';

const title = "Home";
const description = "Welcome to the official website of the Ciboston Provincial Government. Access services, information and resources for citizens, businesses, and visitors.";
---

<Layout 
  title={title}
  description={description}
>
  <Hero />
  
  <div class="container mx-auto px-4 py-12">
    <RegionalMap />
    
    <section class="my-16">
      <h2 class="font-poppins text-3xl font-bold text-primary-700 text-center mb-8">Layanan Pemda</h2>
      <ServiceGrid />
    </section>
    
    <section class="my-16">
      <h2 class="font-poppins text-3xl font-bold text-primary-700 text-center mb-8">Pembaruan Terbaru</h2>
      <NewsCarousel />
    </section>
    
    <FeaturedSection />
  </div>
  
  <EmergencyStrip />
</Layout>