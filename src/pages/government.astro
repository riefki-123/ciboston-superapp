---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import OrganizationalChart from '../components/government/OrganizationalChart.astro';
import SecurityAgencies from '../components/government/SecurityAgencies.astro';
import PublicAgencies from '../components/government/PublicAgencies.astro';

const title = "Government Structure";
const description = "Learn about the Ciboston Provincial Government's organizational structure, security agencies, and public departments.";
---

<Layout 
  title={title}
  description={description}
>
  <PageHeader 
    title="Government Structure"
    subtitle="Understanding our provincial governance and administrative framework"
    backgroundImage="https://images.pexels.com/photos/2387793/pexels-photo-2387793.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  />
  
  <div class="container mx-auto px-4 py-12">
    <section class="my-12">
      <div class="bg-white rounded-xl shadow-md p-8">
        <h2 class="font-poppins text-3xl font-bold text-primary-700 mb-4 text-center">Provincial Governance Structure</h2>
        <p class="text-gray-600 max-w-4xl mx-auto text-center mb-8">
          The Ciboston Provincial Government operates under a democratic framework with elected officials and appointed public servants. Our structure is designed to ensure efficient service delivery, transparent decision-making, and citizen representation.
        </p>
        
        <OrganizationalChart />
      </div>
    </section>
    
    <section class="my-16">
      <SecurityAgencies />
    </section>
    
    <section class="my-16">
      <PublicAgencies />
    </section>
  </div>
</Layout>