---
const securityAgencies = [
  {
    id: "cose",
    name: "COSE",
    fullName: "Ciboston Office and Security Enforcement",
    description: "Responsible for intelligence operations, counter-terrorism, and high-level security coordination across the province.",
    director: "Director James Morrison",
    responsibilities: [
      "Counter-terrorism operations",
      "Intelligence gathering",
      "Special investigations",
      "Provincial security coordination"
    ],
    image: "https://images.pexels.com/photos/5721883/pexels-photo-5721883.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  },
  {
    id: "ccpd",
    name: "CCPD",
    fullName: "Ciboston City Police Department",
    description: "The primary law enforcement agency serving Ciboston City with community policing and crime prevention programs.",
    director: "Commissioner Diana Reynolds",
    responsibilities: [
      "Urban law enforcement",
      "Criminal investigations",
      "Traffic management",
      "Community policing programs"
    ],
    image: "https://images.pexels.com/photos/3861458/pexels-photo-3861458.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  },
  {
    id: "chp",
    name: "CHP",
    fullName: "Ciboston Highway Police",
    description: "Maintains safety on provincial highways and rural roads, conducting traffic enforcement and accident response.",
    director: "Chief Thomas Lee",
    responsibilities: [
      "Highway patrol",
      "Traffic enforcement",
      "Accident investigation",
      "Rural area security"
    ],
    image: "https://images.pexels.com/photos/4490252/pexels-photo-4490252.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  },
  {
    id: "ccfd",
    name: "CCFD",
    fullName: "Ciboston City Fire Department",
    description: "Provides fire suppression, rescue services, and fire prevention education throughout the province.",
    director: "Chief Sophia Martinez",
    responsibilities: [
      "Fire suppression",
      "Emergency rescue",
      "Hazardous materials response",
      "Fire prevention education"
    ],
    image: "https://images.pexels.com/photos/4058571/pexels-photo-4058571.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  },
  {
    id: "wssk",
    name: "WSSK",
    fullName: "Worldwide Strategic Special Force Kommando",
    description: "Elite tactical unit handling high-risk operations, hostage situations, and specialized security missions.",
    director: "Commander Alexander Wright",
    responsibilities: [
      "Tactical response operations",
      "Hostage rescue",
      "High-risk warrant execution",
      "VIP protection"
    ],
    image: "https://images.pexels.com/photos/6286846/pexels-photo-6286846.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  }
];
---

<section>
  <h2 class="font-poppins text-3xl font-bold text-primary-700 text-center mb-8">Security Agencies</h2>
  
  <div class="grid grid-cols-1 gap-8">
    {securityAgencies.map((agency, index) => (
      <div class={`bg-white rounded-xl shadow-md overflow-hidden ${index % 2 === 1 ? 'md:flex-row-reverse' : ''} md:flex`}>
        <div class="md:w-1/3 lg:w-1/4 relative">
          <img 
            src={agency.image} 
            alt={agency.fullName} 
            class="w-full h-60 md:h-full object-cover"
          />
          <div class="absolute top-0 left-0 bg-primary-700 text-white py-1 px-3 font-medium">
            {agency.name}
          </div>
        </div>
        
        <div class="p-6 md:w-2/3 lg:w-3/4">
          <h3 class="font-poppins text-2xl font-semibold text-primary-700 mb-1">{agency.fullName}</h3>
          <p class="text-gray-500 mb-4">{agency.director}</p>
          
          <p class="text-gray-700 mb-4">{agency.description}</p>
          
          <div>
            <h4 class="font-medium text-gray-900 mb-2">Key Responsibilities:</h4>
            <ul class="grid grid-cols-1 sm:grid-cols-2 gap-y-2 gap-x-4">
              {agency.responsibilities.map(responsibility => (
                <li class="flex items-start">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary-500 mr-2 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                  <span class="text-gray-600">{responsibility}</span>
                </li>
              ))}
            </ul>
          </div>
          
          <div class="mt-6">
            <a href={`/agencies/${agency.id}`} class="inline-flex items-center text-primary-600 hover:text-primary-700">
              Learn more about {agency.name}
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>