---
interface Props {
  title: string;
  subtitle?: string;
  backgroundImage?: string;
}

const { 
  title, 
  subtitle, 
  backgroundImage = "https://images.pexels.com/photos/4386426/pexels-photo-4386426.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
} = Astro.props;
---

<section class="relative py-16 md:py-24 overflow-hidden">
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-r from-primary-900/80 to-primary-800/80 z-10"></div>
    <img 
      src={backgroundImage} 
      alt="" 
      class="object-cover w-full h-full"
    />
  </div>
  
  <div class="container mx-auto px-4 relative z-20">
    <div class="max-w-3xl">
      <h1 class="font-poppins text-4xl md:text-5xl font-bold text-white mb-4">
        {title}
      </h1>
      
      {subtitle && (
        <p class="text-xl text-gray-100 md:text-2xl">
          {subtitle}
        </p>
      )}
    </div>
  </div>
</section>