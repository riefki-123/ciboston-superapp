---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import ContactForm from '../components/contact/ContactForm.astro';
import EmergencyDirectory from '../components/contact/EmergencyDirectory.astro';
import ServiceRequest from '../components/contact/ServiceRequest.astro';
import SocialMedia from '../components/contact/SocialMedia.astro';
import OfficeLocations from '../components/contact/OfficeLocations.astro';

const title = "Kontak & Layanan Publik";
const description = "Hubungi Pemerintah Provinsi Ciboston. Temukan layanan darurat, ajukan permintaan layanan, cari kantor pemerintahan, dan terhubung dengan kami melalui media sosial.";
---

<Layout 
  title={title}
  description={description}
>
  <PageHeader 
    title="Kontak & Layanan Publik"
    subtitle="Cara menghubungi kami, mengajukan layanan, dan menemukan sumber daya penting"
    backgroundImage="https://images.pexels.com/photos/33999/pexels-photo.jpg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  />
  
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {/* Konten Utama */}
      <div class="lg:col-span-2">
        {/* Formulir Kontak */}
        <section class="mb-12">
          <h2 class="font-poppins text-3xl font-bold text-primary-700 mb-6">Hubungi Kami</h2>
          <ContactForm />
        </section>
        
        {/* Sistem Permintaan Layanan */}
        <section class="mb-12">
          <h2 class="font-poppins text-3xl font-bold text-primary-700 mb-6">Ajukan Permintaan Layanan</h2>
          <ServiceRequest />
        </section>
        
        {/* Peta Lokasi Kantor */}
        <section>
          <h2 class="font-poppins text-3xl font-bold text-primary-700 mb-6">Kantor Kami</h2>
          <OfficeLocations />
        </section>
      </div>
      
      {/* Sidebar */}
      <div class="lg:col-span-1">
        {/* Nomor Darurat */}
        <section class="mb-8">
          <h2 class="font-poppins text-2xl font-bold text-primary-700 mb-4">Direktori Darurat</h2>
          <div class="bg-white rounded-xl shadow-md overflow-hidden">
            <EmergencyDirectory />
          </div>
        </section>
        
        {/* Media Sosial */}
        <section class="mb-8">
          <h2 class="font-poppins text-2xl font-bold text-primary-700 mb-4">Terhubung dengan Kami</h2>
          <div class="bg-white rounded-xl shadow-md overflow-hidden">
            <SocialMedia />
          </div>
        </section>
        
        {/* Tautan Cepat */}
        <section>
          <h2 class="font-poppins text-2xl font-bold text-primary-700 mb-4">Tautan Cepat</h2>
          <div class="bg-white rounded-xl shadow-md overflow-hidden p-6">
            <ul class="space-y-3">
              <li>
                <a href="/faqs" class="flex items-center text-primary-600 hover:text-primary-700">
                  {/* Ikon */}
                  Pertanyaan yang Sering Diajukan
                </a>
              </li>
              <li>
                <a href="/feedback" class="flex items-center text-primary-600 hover:text-primary-700">
                  {/* Ikon */}
                  Kirim Masukan
                </a>
              </li>
              <li>
                <a href="/departments" class="flex items-center text-primary-600 hover:text-primary-700">
                  {/* Ikon */}
                  Direktori Dinas
                </a>
              </li>
              <li>
                <a href="/events" class="flex items-center text-primary-600 hover:text-primary-700">
                  {/* Ikon */}
                  Acara Mendatang
                </a>
              </li>
              <li>
                <a href="/careers" class="flex items-center text-primary-600 hover:text-primary-700">
                  {/* Ikon */}
                  Lowongan Kerja
                </a>
              </li>
            </ul>
          </div>
        </section>
      </div>
    </div>
  </div>
</Layout>