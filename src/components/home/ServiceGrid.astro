<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
  {services.map((service, index) => (
    <a 
      href={service.link} 
      class="bg-white p-6 rounded-xl shadow-card hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1 group"
    >
      <div class="rounded-full bg-primary-50 w-16 h-16 flex items-center justify-center mb-4 group-hover:bg-primary-100 transition-colors duration-300">
        <Fragment set:html={service.icon} />
      </div>
      <h3 class="font-poppins text-xl font-semibold text-primary-700 mb-2">{service.title}</h3>
      <p class="text-gray-600">{service.description}</p>
      <div class="mt-4 text-primary-600 font-medium group-hover:text-primary-500 flex items-center">
        <span>Lebih Lanjut</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1 transform group-hover:translate-x-1 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
