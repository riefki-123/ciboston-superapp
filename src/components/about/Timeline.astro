---
const timelineEvents = [
  {
    year: "1892",
    title: "Province Establishment",
    description: "Ciboston was officially established as a province following the Regional Reorganization Act."
  },
  {
    year: "1923",
    title: "Industrial Revolution",
    description: "The province underwent rapid industrialization, establishing itself as a manufacturing hub."
  },
  {
    year: "1947",
    title: "Educational Reform",
    description: "Launched the Provincial Education Initiative, establishing the renowned Ciboston University."
  },
  {
    year: "1978",
    title: "Economic Transition",
    description: "Shifted from manufacturing to a service and technology-focused economy."
  },
  {
    year: "2005",
    title: "Environmental Commitment",
    description: "Implemented the Green Ciboston Plan, committing to renewable energy and sustainability."
  },
  {
    year: "2018",
    title: "Digital Transformation",
    description: "Launched the Digital Ciboston Initiative to modernize government services and infrastructure."
  },
  {
    year: "2025",
    title: "Smart Province Vision",
    description: "Implemented the Smart Province framework, integrating IoT and AI across public services."
  }
];
---

<section class="my-16" id="history">
  <h2 class="font-poppins text-3xl font-bold text-primary-700 text-center mb-8">Historical Timeline</h2>
  
  <div class="relative">
    <!-- Timeline line -->
    <div class="absolute left-4 md:left-1/2 top-0 bottom-0 w-0.5 bg-primary-200 transform md:-translate-x-1/2"></div>
    
    <div class="space-y-12">
      {timelineEvents.map((event, index) => (
        <div class={`relative flex flex-col md:flex-row ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`}>
          <!-- Timeline node -->
          <div class="absolute left-4 md:left-1/2 w-8 h-8 bg-secondary-500 rounded-full border-4 border-white shadow transform -translate-x-1/2 flex items-center justify-center z-10">
            <span class="text-primary-800 font-bold text-xs">{event.year.substring(2)}</span>
          </div>
          
          <!-- Content -->
          <div class={`ml-12 md:ml-0 md:w-1/2 ${index % 2 === 0 ? 'md:pr-12' : 'md:pl-12'}`}>
            <div class="bg-white p-5 rounded-lg shadow-md">
              <div class="flex items-center mb-2">
                <span class="text-xl text-primary-600 font-bold mr-2">{event.year}</span>
                <h3 class="font-poppins text-lg font-semibold text-primary-700">{event.title}</h3>
              </div>
              <p class="text-gray-600">{event.description}</p>
            </div>
          </div>
          
          <!-- Spacer for the other side -->
          <div class="hidden md:block md:w-1/2"></div>
        </div>
      ))}
    </div>
  </div>
</section>