---
const economicData = {
  gdp: { value: "62.8B", change: "+3.5%", trend: "up" },
  unemployment: { value: "4.2%", change: "-0.8%", trend: "down" },
  inflation: { value: "2.1%", change: "+0.3%", trend: "up" },
  exports: { value: "18.5B", change: "+5.2%", trend: "up" }
};

const sectorData = [
  { name: "Technology", percentage: 28 },
  { name: "Manufacturing", percentage: 22 },
  { name: "Services", percentage: 30 },
  { name: "Agriculture", percentage: 12 },
  { name: "Other", percentage: 8 }
];
---

<section class="my-16" id="economy">
  <h2 class="font-poppins text-3xl font-bold text-primary-700 text-center mb-8">Economic Indicators</h2>
  
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Key Economic Indicators -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-xl shadow-md p-6">
        <h3 class="font-poppins text-xl font-semibold text-primary-700 mb-4">Key Indicators</h3>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <!-- GDP -->
          <div class="bg-gray-50 p-4 rounded-lg">
            <h4 class="text-gray-500 text-sm mb-1">GDP</h4>
            <div class="flex items-end gap-2">
              <div class="text-2xl font-bold text-primary-700">
                {economicData.gdp.value}
              </div>
              <div class={`text-sm font-medium mb-1 ${economicData.gdp.trend === 'up' ? 'text-green-600' : 'text-red-600'}`}>
                {economicData.gdp.change}
                {economicData.gdp.trend === 'up' ? 
                  <span class="inline-block">↑</span> : 
                  <span class="inline-block">↓</span>
                }
              </div>
            </div>
          </div>
          
          <!-- Unemployment -->
          <div class="bg-gray-50 p-4 rounded-lg">
            <h4 class="text-gray-500 text-sm mb-1">Unemployment</h4>
            <div class="flex items-end gap-2">
              <div class="text-2xl font-bold text-primary-700">
                {economicData.unemployment.value}
              </div>
              <div class={`text-sm font-medium mb-1 ${economicData.unemployment.trend === 'down' ? 'text-green-600' : 'text-red-600'}`}>
                {economicData.unemployment.change}
                {economicData.unemployment.trend === 'down' ? 
                  <span class="inline-block">↓</span> : 
                  <span class="inline-block">↑</span>
                }
              </div>
            </div>
          </div>
          
          <!-- Inflation -->
          <div class="bg-gray-50 p-4 rounded-lg">
            <h4 class="text-gray-500 text-sm mb-1">Inflation Rate</h4>
            <div class="flex items-end gap-2">
              <div class="text-2xl font-bold text-primary-700">
                {economicData.inflation.value}
              </div>
              <div class={`text-sm font-medium mb-1 ${economicData.inflation.trend === 'down' ? 'text-green-600' : 'text-red-600'}`}>
                {economicData.inflation.change}
                {economicData.inflation.trend === 'up' ? 
                  <span class="inline-block">↑</span> : 
                  <span class="inline-block">↓</span>
                }
              </div>
            </div>
          </div>
          
          <!-- Exports -->
          <div class="bg-gray-50 p-4 rounded-lg">
            <h4 class="text-gray-500 text-sm mb-1">Annual Exports</h4>
            <div class="flex items-end gap-2">
              <div class="text-2xl font-bold text-primary-700">
                {economicData.exports.value}
              </div>
              <div class={`text-sm font-medium mb-1 ${economicData.exports.trend === 'up' ? 'text-green-600' : 'text-red-600'}`}>
                {economicData.exports.change}
                {economicData.exports.trend === 'up' ? 
                  <span class="inline-block">↑</span> : 
                  <span class="inline-block">↓</span>
                }
              </div>
            </div>
          </div>
        </div>
        
        <div class="mt-8">
          <h4 class="font-poppins text-lg font-semibold text-primary-700 mb-4">Economic Highlights</h4>
          <ul class="space-y-3">
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary-500 mr-2 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              <span class="text-gray-700">Named one of the Top 10 Investment Destinations for three consecutive years</span>
            </li>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary-500 mr-2 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              <span class="text-gray-700">Home to 5 of the country's top 100 technology companies</span>
            </li>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary-500 mr-2 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              <span class="text-gray-700">Leading renewable energy producer with 45% of power from green sources</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
    
    <!-- Industry Breakdown -->
    <div>
      <div class="bg-white rounded-xl shadow-md p-6 h-full">
        <h3 class="font-poppins text-xl font-semibold text-primary-700 mb-4">Industry Breakdown</h3>
        
        <div class="space-y-4">
          {sectorData.map(sector => (
            <div>
              <div class="flex justify-between mb-1">
                <span class="text-gray-700">{sector.name}</span>
                <span class="text-gray-700 font-medium">{sector.percentage}%</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2.5">
                <div class="bg-primary-600 h-2.5 rounded-full" style={`width: ${sector.percentage}%`}></div>
              </div>
            </div>
          ))}
        </div>
        
        <div class="mt-8 text-center">
          <a 
            href="/economy" 
            class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium"
          >
            View Detailed Economic Report
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>